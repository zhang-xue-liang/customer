.login{
  height: 100%;
  background: #fff;
  box-sizing: border-box;
}
.account .empty{
  height: 30rpx;
  background: #F9F9F9;
}
.account .main{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
}
.account .main image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.account .main .phone{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  margin: 30rpx 0;
}
.account .main .txt{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  margin-bottom: 60rpx;
}
.account .main .btn{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
  width: 630rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 10rpx;
  border: 1px solid #CCCCCC;
}
.account .pop-wrap{
  width: 600rpx;
  height: 240rpx;
  padding-top: 80rpx;
  border-radius: 30rpx;
}
.account .pop-wrap .txt{
  padding: 0 122rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
  line-height: 48rpx;
}
.account .pop-wrap .bots{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 88rpx;
}
.account .pop-wrap .bots view{
  flex: 0 0 50%;
  text-align: center;
  line-height: 88rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
}
.account .pop-wrap .bots view:nth-child(1){
  color: #FC7431;
  border-top: 1px solid #FC7431;
}
.account .pop-wrap .bots view:nth-child(2){
  color: #fff;
  background: #FC7431;
}