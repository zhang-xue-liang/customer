.repair{
  min-height: 100%;
  background: rgba(249, 249, 249, 1);
  box-sizing: border-box;
  padding: 30rpx;
}
.repair .information{
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
}
.repair .information .title{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-bottom: 36rpx;
}
.repair .information .content .top{
  display: flex;
  margin-bottom: 22rpx;
}
.repair .information .content .top image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 5rpx;
}
.repair .information .content .top view{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}
.repair .information .content .bot{
  padding-bottom: 10rpx;
  border-bottom: 1px solid #ccc;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

.repair .instructions{
  padding: 0 30rpx 30rpx 30rpx;
  background: #fff;
}
.repair .instructions .content{
  margin-bottom: 30rpx;
}
.repair .instructions .content .top{
  display: flex;
  margin-bottom: 22rpx;
}
.repair .instructions .content .top image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 5rpx;
}
.repair .instructions .content .top view{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}
.repair .instructions .content .bot textarea{
  padding: 20rpx;
  width: 100%;
  height: 160rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
}
.repair .pic{
  padding: 0 30rpx 0 30rpx;
  background: #fff;
  border-radius: 0 0 30rpx 30rpx;
  margin-bottom: 30rpx;
}
.repair .pic .top{
  margin-bottom: 10rpx;
}
.repair .pic .top view:nth-child(1){
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.repair .pic .top view:nth-child(2){
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.repair .pic .main{
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.repair .pic .main .vi{
  position: relative;
}
.repair .pic .main .vi .icon-close{
  position: absolute;
  right: -45rpx;
  top: -50rpx;
  font-size: 60rpx;
  color: #000;
}
.repair .pic .main .uplod-img{
  display: flex;
  flex-wrap: wrap;
}
.repair .pic .main .uplod-img .it{
  position: relative;
  display: flex;
  margin-right: 10rpx;
}
.repair .pic .main .uplod-img image{
  width: 160rpx;
  height: 160rpx;
}
.repair .pic .main .item{
  margin-left: 10rpx;
}
.repair .pic .main .uplod{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border: 1px dashed #ccc;
}
.repair .pic .main .uplod view:nth-child(1){
  text-align: center;
  font-size: 42rpx;
  margin-bottom: 20rpx;
}
.repair .pic .main .uplod view:nth-child(2){
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.repair .product{
  padding: 30rpx;
  border-radius: 30rpx;
  background: #fff;
  margin-bottom: 30rpx;
}
.repair .product .title{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-bottom: 14rpx;
}
.repair .product .main .item{
  padding: 40rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.repair .product .main .item:last-child{
  border-bottom: none;
}
.repair .product .main .item view:nth-child(1){
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}
.repair .product .main .item view:nth-child(2){
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.repair .customer{
  padding: 30rpx;
  background: #fff;
  border-radius: 30rpx;
}
.repair .customer .title{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}
.repair .customer .main{

}
.repair .customer .main .item{
  margin-bottom: 30rpx;
}
.repair .customer .main .item .top{
  display: flex;
}
.repair .customer .main .item .top image{
  height: 30rpx;
  width: 30rpx;
  margin-top: 5rpx;
}
.repair .customer .main .item .top view{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}
.repair .customer .main .item .bot{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}
.repair .customer .main .item .bot input{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.repair .customer .main .item .bot view{
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}
.repair .customer .main .item .bots textarea{
  padding: 20rpx;
  width: 100%;
  height: 160rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  margin-top: 20rpx;
}
.repair .btn{
  margin-top: 30rpx;

}
.repair .btn view{
  height: 88rpx;
  width: 100%;
  background: #FC7431;
  border-radius: 10rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.repair .poMain{
  padding: 40rpx;
}
.repair .poMain .item{
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

